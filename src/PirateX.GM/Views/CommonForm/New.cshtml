@using PirateX.GMSDK.Mapping;
@{

    IGMUIItemMap map = ViewBag.ItemMap;

    ViewBag.Title = @map.Name;

}

<h2>@map.Name</h2>

@using (Html.BeginForm("Save", "CommonForm", new { id = ViewBag.Action }, FormMethod.Post, new { @class = "form" }))
{
    List<GMUIGroup> groups = ViewBag.Groups;
    <div class="row" id="cards">
        @foreach (var item in groups)
        {
            @UIHelper.ConvertToCard(item, ViewBag.ColClass)
        }
    </div>

    <button type="submit" class="btn btn-block btn-primary">提交并保存</button>
}